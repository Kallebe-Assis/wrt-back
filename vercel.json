{
  "version": 2,
  "builds": [
    {
      "src": "server-vercel.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server-vercel.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, user-id, X-Requested-With"
      }
    },
    {
      "src": "/(.*)",
      "dest": "server-vercel.js"
    }
  ],
  "functions": {
    "server-vercel.js": {
      "maxDuration": 30
    }
  }
} 